<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/register_toolbar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setupprofileImage"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/register_toolbar"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lienarLayout1"
        android:layout_height="wrap_content"
        android:layout_below="@id/setupprofileImage"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap : "
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/setupNamaLengkap"
            android:layout_height="wrap_content"
            android:background="@drawable/background_input"
            android:padding="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lienarLayout2"
        android:layout_height="wrap_content"
        android:layout_below="@id/lienarLayout1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Telephone : "
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/setupNoTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_input"
            android:padding="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lienarLayout2"
        android:background="@drawable/background_button"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="CREATE ACCOUNT"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</RelativeLayout>